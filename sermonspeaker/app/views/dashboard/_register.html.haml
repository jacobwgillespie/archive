
%h3 Register for free
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  %fieldset
    .control-group
      = f.label :name
      .controls
        = f.text_field :name
    .control-group
      = f.label :email
      .controls
        = f.email_field :email
        %span.help-block
          You will login with your email address
    .control-group
      = f.label :password
      .controls
        = f.password_field :password
    .control-group
      = f.label :password_confirmation
      .controls
        = f.password_field :password_confirmation
  .actions
    = f.submit 'Sign Up', :class => 'btn primary'
doctype 5
html(lang="en", class="wf-loading")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width")

    title Map Locator

    link(rel="stylesheet", href="/styles/normalize.css")
    link(rel="stylesheet", href="/styles/foundation.min.css")
    link(rel="stylesheet", href="/styles/style.css")

    link(rel="shortcut icon", href="/icons/favicon.ico")
    link(rel="apple-touch-icon-precomposed", href="icons/apple-touch-icon-57x57-precomposed.png")
    link(rel="apple-touch-icon-precomposed", sizes="72x72", href="icons/apple-touch-icon-72x72-precomposed.png")
    link(rel="apple-touch-icon-precomposed", sizes="114x114", href="icons/apple-touch-icon-114x114-precomposed.png")
    link(rel="apple-touch-icon-precomposed", sizes="144x144", href="icons/apple-touch-icon-144x144-precomposed.png")

    script(src="https://maps.googleapis.com/maps/api/js?sensor=false&language=en", type="text/javascript")
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js", type="text/javascript")
    script(src="https://cdn.firebase.com/v0/firebase.js", type="text/javascript")
    script(src="https://cdn.firebase.com/v0/firebase-auth-client.js", type="text/javascript")
    script(src="/scripts/vendor.min.js", type="text/javascript")
    script(src="/scripts/app.min.js", type="text/javascript")

  body(ng-app="app")

    nav.top-bar(ng-controller="UserController")
      ul.title-area
        li.name
          h1
            a(href="#/") Map Locator
        li.toggle-topbar.menu-icon
          a(href="#")
            span Menu
      section.top-bar-section
        div(ng-show="state == 'anonymous'")
          form(ng-submit="login()")
            ul.right
              li.has-form
                input(type="text", ng-model="email", placeholder="Email")
              li.has-form
                input(type="password", ng-model="password", placeholder="Password")
              li.has-form
                input.button(type="submit", value="Login")
        div(ng-show="state == 'authorized'")
          ul.right
            li
              a Hi, {{ user.auth.email }}
            li.has-form
              button.button(ng-click="logout()") Logout
        div(ng-show="state == 'loading'")
          ul.right
            li
              a Loading...

    div(ng-view)

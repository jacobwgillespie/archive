.row
  .large-8.columns
    h1 {{ map.name }}
    p {{ map.description }}
  .large-4.columns
    form
      fieldset
        legend Edit map
        .row
          .large-12.columns
            label Name
            input(type="text", ng-model="map.name")
        .row
          .large-12.columns
            label Description
            textarea(ng-model="map.description")
.row
  .large-12.columns
    h2 Pins
.row
  .large-6.columns
    #map_canvas
      .google-map(center="center", draggable="true", zoom="zoom", fit="true", markers="map.pins", style="height: 600px; width: 100%;")
  .large-6.columns
    .row
      .large-12.columns
        a.button.small.success.radius.right(href="#/map{{map.id}}/pins/new") Add Pin
    table
      thead
        tr
          th(width="200") Name
          th(width="300") Description
          th(width="200", style="text-align: right;") Actions
      tbody(ng-repeat="(id, pin) in map.pins")
        tr
          td {{ pin.name }}
          td {{ pin.description }}
          td
            button.button.small.alert.radius.right(ng-click="removePin(id)") Delete


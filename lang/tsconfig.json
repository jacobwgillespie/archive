{
  "compilerOptions": {
    "noEmit": true,
    "target": "es2019",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["build", "src", "index.js"],
  "include": ["./*.js", "./*.ts"]
}

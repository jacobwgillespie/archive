<section id="graphs">
  <div class="page-header">
    <h1>Graphs</h1>
  </div>

  <h2>Word Count</h2>
  <div id="chart1" style="width:1200px;height:400px;"></div>

  <h2>Flesch-Kincaid Level</h2>
  <div id="chart2" style="width:1200px;height:400px;"></div>

  <h2>Increasing Word Count</h2>
  <div id="chart3" style="width:1200px;height:400px;"></div>

  <h2>Time to Response</h2>
  <div id="chart4" style="width:1200px;height:400px;"></div>

  <div id="chart5" style="width:1000px;height:400px;"></div>
  <div id="chart6" style="width:1000px;height:400px;"></div>
  <div id="chart7" style="width:1000px;height:400px;"></div>
</section>

<script type="text/javascript">
jQuery(function($) {
var c1, c2, c3, c4, c5, c6, c7;

c1 = new Dygraph(
document.getElementById("chart1"),
"Date,<%= @settings['user1']['first_name'] %>,<%= @settings['user2']['first_name'] %>\n<%= @days.to_a.map { |day| [day.first, day.last[:jreport].num_words, day.last[:kreport].num_words].join(',') }.join('\\n') %>", { rollPeriod: 7, showRoller: true }
);

c2 = new Dygraph(
document.getElementById("chart2"),
"Date,<%= @settings['user1']['first_name'] %>,<%= @settings['user2']['first_name'] %>\n<%= @days.to_a.map { |day| [day.first, day.last[:jreadability], day.last[:kreadability]].join(',') }.join('\\n') %>", { rollPeriod: 7, showRoller: true }
);

c3 = new Dygraph(
document.getElementById("chart3"),
"Date,<%= @settings['user1']['first_name'] %>,<%= @settings['user2']['first_name'] %>\n<%= @days.to_a.map { |day| [day.first, day.last[:jwc_total], day.last[:kwc_total]].join(',') }.join('\\n') %>", { rollPeriod: 7, showRoller: true }
);

c4 = new Dygraph(
document.getElementById("chart4"),
"Date,<%= @settings['user1']['first_name'] %>,<%= @settings['user2']['first_name'] %>\n<%= @days.to_a.map { |day| [day.first, day.last[:ttr][@settings['user1']['full_name']][:time], day.last[:ttr][@settings['user2']['full_name']][:time]].join(',') }.join('\\n') %>", { rollPeriod: 7, showRoller: true }
);

});
</script>
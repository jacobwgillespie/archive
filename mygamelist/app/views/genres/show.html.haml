- page_title "#{@genre.name} Games"
.pull-right.btn-group.hide-unless-admin
  = link_to 'Edit', edit_genre_path(@genre), :class => 'btn'
  = link_to 'Destroy', @genre, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger'


.page-header
  %h1 #{@genre.name} Games


#games
  %ul.thumbnails.game-index
    = render(@genre.games)

= form_for @publisher do |f|
  -if @publisher.errors.any?
    #error_explanation
      %h2= "#{pluralize(@publisher.errors.count, "error")} prohibited this publisher from being saved:"
      %ul
        - @publisher.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'

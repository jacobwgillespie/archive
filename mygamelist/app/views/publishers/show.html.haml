- page_title "Games by #{@publisher.name}"
.pull-right.btn-group.hide-unless-admin
  = link_to 'Edit', edit_publisher_path(@publisher), :class => 'btn btn-inverse'
  = link_to 'Destroy', @publisher, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger'


.page-header
  %h1 Games by #{@publisher.name}

#games
  %ul.thumbnails.game-index
    = render(@publisher.games)